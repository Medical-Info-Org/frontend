{
	"extends": "@zayne-labs/tsconfig/bundler/next",

	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},

	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.mjs",
		"**/*.js",
		"public/**/*.ts",
		".next/types/**/*.ts",
		"next-env.d.ts"
	],
	"exclude": ["node_modules", ".next"]
}
